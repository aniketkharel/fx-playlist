<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="399.0" prefWidth="602.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.Controller">
   <Label fx:id="lblValidationTxt" prefHeight="17.0" prefWidth="401.0" text="CANNOT BE EMPTY AND REQUIRED ACTIVE INTERNET CONNECTION" textFill="#795a5a">
      <VBox.margin>
         <Insets left="15.0" />
      </VBox.margin>
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
   </Label>
   <TextArea fx:id="txtActivityDescription" prefHeight="215.0" prefWidth="456.0" promptText="Your Activity Description" wrapText="true" VBox.vgrow="SOMETIMES">
      <VBox.margin>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </VBox.margin>
      <font>
         <Font size="14.0" />
      </font>
   </TextArea>
   <Button fx:id="btnSaveActivity" mnemonicParsing="false" onAction="#saveAction" prefHeight="25.0" prefWidth="152.0" text="Save Activity" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets left="15.0" />
      </VBox.margin>
   </Button>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
